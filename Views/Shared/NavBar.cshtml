@* <link rel="stylesheet" href="~/css/Styles.css" type="text/css" media="all">  *@

<div class = "row">
  <div class = "col-md-2">
    <img src='~/img/logo.png' alt="SweetCakes Logo" height="165px" width="165px" class="logo">
  </div>
  <div class = "col-md-4">
    <h1>Sweet</h1>
    <h1>Cakes</h1>
  </div>
  <div class = "col-md-6">
    <form action="/search" method = "get">
        <br>
        <input type="text" name="search">
        <br>
        <button type="submit">Search Our Bakery</button>
        <br>
        @Html.RadioButton("searchParam", "Flavors")
        <label for="searchParam">Search Flavors</label>
        <br>
        @Html.RadioButton("searchParam", "Menu")
        <label for="searchParam">Search Menu Items</label>
      </form>
  </div>
</div>
<ul class="nav nav-tabs" class="nav">
<div class="row">
  <div class = "col-md-2">    
      <li role="presentation"><a href="/">Home</a></li>
      <li role="presentation"><a href="/treats">SweetCakes Menu</a></li>
      <li role="presentation"><a href='/flavors'>Menu By Flavor</a></li>
    </div>
      @if (User.Identity.IsAuthenticated)
      {
        <div class = "col-md-4">
          <li role="presentation"><a href="/treats/create">Add New Menu Item</a></li>
          <li role="presentation"><a href="/flavors/create">Add New Flavor</a></li>
        </div>
        <div class = "col-md-2">
          @using (Html.BeginForm("LogOff", "Account"))
          {
              <input type="submit" class="btn btn-default" value="Log out" />
          }
        </div>
      }
      else 
      {
      <div class = "col-md-4">
        <li role="presentation"><a href='/account/login'>Log In</a></li>
        <li role="presentation"><a href='/account/register'>Create An Account</a></li>
      </div>
      }
    </ul>
  </div>
</div>
    


