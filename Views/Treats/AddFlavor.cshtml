@{
  Layout = "_Layout";
}

@model SweetCakes.Models.Treat

<h4>Add a New Flavor to this Menu Item: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Create New Flavor", "Flavors", "Create")</p>
<p>@Html.ActionLink("Back to Menu", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>